<?php
/**
 * Version Control
 *
 *
 * @file           version.php
 * @package        WordPress 
 * @subpackage     Pilot Fish
 * @filesource     wp-content/themes/pilotfish/includes/version.php
 * @link           N/A
 * @since          Pilot Fish 0.1
 */
?>
<?php
$theme_data = get_theme_data(STYLESHEETPATH . '/style.css');
define('pilotfish_current_theme', $theme_name = $theme_data['Name']);

function pilotfish_template_data() {

    $theme_data = get_theme_data(TEMPLATEPATH . '/style.css');
    $pilotfish_template_name = $theme_data['Name'];
    $pilotfish_template_version = $theme_data['Version'];

    echo '<!-- We need this for debugging -->' . "\n";
    echo '<meta name="template" content="' . $pilotfish_template_name . ' ' . $pilotfish_template_version . '" />' . "\n";
}

add_action('wp_head', 'pilotfish_template_data');

function pilotfish_theme_data() {
    if (is_child_theme()) {
        $theme_data = get_theme_data(STYLESHEETPATH . '/style.css');
        $pilotfish_theme_name = $theme_data['Name'];
        $pilotfish_theme_version = $theme_data['Version'];

        echo '<meta name="theme" content="' . $pilotfish_theme_name . ' ' . $pilotfish_theme_version . '" />' . "\n";
    }
}

add_action('wp_head', 'pilotfish_theme_data');
